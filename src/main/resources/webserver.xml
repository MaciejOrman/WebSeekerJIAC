<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

	<!-- Generic application context definition. -->
<beans>

	<!--
		# The default AgentNode Spring configuration # provides an empty
		platform definition without JMX support # the platform bean may be set
		as parent in any other platfom definitions
	-->
	<bean name="WebServer" class="de.dailab.webserver.JettyServerAgentNodeBean" singleton="false">
		<property name="logLevel" value="warn" />
		<property name="connector">
			<list>
				<ref bean="DefaultConnector" />
			</list>
		</property>
	</bean>
	
	
	<bean name="SecuredWebserver" parent="WebServer">
		<property name="connector">
			<list>
				<ref bean="SecuredConnector" />
			</list>
		</property>
		<property name="keystore" value="keys/JIACv.jks" />
	</bean>
	
	<bean name="SecuredConnector" class="org.eclipse.jetty.server.ssl.SslSelectChannelConnector" singleton="true">
		<property name="port" value="8443" />
		<property name="password" value="JIACtest1418" />
		<property name="keyPassword" value="JIACtest1418" />
	</bean>
	
	<bean name="DefaultConnector" class="org.eclipse.jetty.server.nio.SelectChannelConnector" singleton="true">
		<property name="port" value="8090" />
	</bean>

</beans>

